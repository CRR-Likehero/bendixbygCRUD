doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', href='/css/backend.css', type='text/css')
        title #{title}
    
    body
        section.backend-wrapper
            div.menu
                ul
                    li
                        a(href="/backend") Overblik
                    li
                        a(href="/createarticle") Nye projekter
                    li
                        a(href="#") Indstillinger
                button#logoutbtn.login_button log out
            div.content-article
                div.update-article-img-container
                    img(src=`/img/articles/${article.imagecover}`, alt=`${article.heading}`)
                form.projects-form#updatearticleform
                    div.form-box-wrapper
                        label(for="overskrift") Overskrift
                        textarea#editheading(name='editheading', type='text')= `${article.heading}`
                    div.form-box-wrapper
                        label(for="indhold") Indhold
                        textarea#editcontent(name='editcontent', type='text')= `${article.content}`
                    div.login_button_wrapper
                        button.login_button Opdater
    
    script(src='/js/bundle.js')