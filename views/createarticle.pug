doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', href='/css/backend.css', type='text/css')
        title #{title}
    
    body
        section.backend-wrapper
            div.menu
                ul
                    li
                        a(href="/backend") Overblik
                    li
                        a(href="/createarticle") Nye projekter
                    li
                        a(href="#") Indstillinger
                button#logoutbtn.login_button log out
            div.content-article
                form.projects-form#createarticleform
                    div.form-box-wrapper
                        label(for="overskrift") Overskrift
                        input#heading(type="text", placeholder='Her kan du skrive en overskrift til dit projekt')
                    div.form-box-wrapper
                        label(for="indhold") Indhold
                        textarea#content(name='content', type='text', placeholder='Her kan du skrive om dit projekt ')
                    div.form-box-wrapper
                        label(for="billeder") Billeder
                        input#imagecover(type="text", placeholder='Billeder')
                    div.login_button_wrapper
                        button.login_button Udgiv
                div.content-watermark
    
    script(src='/js/bundle.js')
    